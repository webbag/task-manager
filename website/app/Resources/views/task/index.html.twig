{% extends 'base.html.twig' %}

{% block body %}
    <h1>Task list</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Data utworzenia</th>
            <th>Priorytet</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td><a href="{{ path('task_show', { 'id': task.taId }) }}">{{ task.taId }}</a></td>
                <td>{{ task.taName }}</td>
                <td>{{ task.taDescription }}</td>
                <td>{% if task.taDateCreate %}{{ task.taDateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ task.taPriority }}</td>
                <td>{{ task.taStatus }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('task_show', { 'id': task.taId }) }}" class="btn btn-default" role="button">PodglÄ…d</a>
                        </li>
                        <li>
                            <a href="{{ path('task_edit', { 'id': task.taId }) }}" class="btn btn-primary" role="button">Edycja</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('task_new') }}" class="btn btn-primary" role="button">Dodaj nowy</a>
        </li>
    </ul>
{% endblock %}
